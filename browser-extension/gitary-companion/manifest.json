{
  "manifest_version": 3,
  "name": "Gitary Companion",
  "short_name": "Gitary",
  "version": "0.1.0",
  "description": "Open GitHub repositories in Gitary with one click, providing enhanced code reading and note-taking experience.",
  "author": "Gitary",
  "homepage_url": "https://gitary.app",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_title": "Open in Gitary",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
